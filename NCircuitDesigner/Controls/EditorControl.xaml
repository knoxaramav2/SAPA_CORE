             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NCircuitDesigner.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ContentControl>
        <Canvas Name="EditorCanvas" MouseUp="EditorCanvas_MouseUp" Background="#00656565" MouseWheel="EditorCanvas_MouseWheel" MouseMove="EditorCanvas_MouseMove" MouseLeave="EditorCanvas_MouseLeave" MouseLeftButtonDown="EditorCanvas_MouseLeftButtonDown" MouseLeftButtonUp="EditorCanvas_MouseLeftButtonUp">
